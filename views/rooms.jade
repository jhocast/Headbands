extends layout

block append head
  script(type='text/javascript', src='/javascripts/jquery-1.11.0.min.js')
  script(type='text/javascript', src='/javascripts/jquery.min.js')
  script(type='text/javascript', src='/socket.io/socket.io.js')
  script(type='text/javascript', src='/javascripts/rooms.js')

block content
  header#banner 
    h1 Lets play!
  section#chatrooms
    div#new_room
      span Start a new Game
      input#new_room_name(type="text")
      input#new_room_btn(type="button", value="Start")
    div#allrooms
      div#header Or join a game
      div#rooms_list
  footer
    div#this_user